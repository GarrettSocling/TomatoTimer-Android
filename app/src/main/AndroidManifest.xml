<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="artem122ya.tomatotimer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".TimerService"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name=".TimerService$FocusTimerActionReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="artem122ya.tomatotimer.ACTION_TIMER_START" />
                <action android:name="artem122ya.tomatotimer.ACTION_TIMER_PAUSE" />
                <action android:name="artem122ya.tomatotimer.ACTION_TIMER_STOP" />
                <action android:name="artem122ya.tomatotimer.ACTION_TIMER_SKIP" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/settings_label"></activity>
    </application>

</manifest>